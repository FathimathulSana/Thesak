<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-white rounded h-100 p-4">
                <h3 class="mb-4 text-dark text-center">Add New Banner</h3>
                <form method="post" action="/admin/addBanner" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Heading</label>
                        <input type="text" class="form-control bg-white" name="heading" />

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Sub-Heading</label>
                        <input type="text" class="form-control bg-white" id="exampleInputPassword1" name="subHeading" />
                    </div>

                    <div class="mb-3" style="padding: top 5px; ;">
                        <label for="formFileMultiple" class="form-label">Choose Product
                            Images</label>
                        <input name="image" class="form-control bg-white" type="file" id="formFileMultiple" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <select name="product" class="form-select form-select mb-3 bg-white"
                            aria-label=".form-select-sm example">
                            {{#each productData}}
                            <option value="{{this._id}}">{{this.productname}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <button type="submit" class="btn text-white" style="background-color:rgb(6, 29, 6) ;">Add
                        Banner</button>
                </form>
            </div>
        </div>

    </div>

</div>
<!-- Form End -->